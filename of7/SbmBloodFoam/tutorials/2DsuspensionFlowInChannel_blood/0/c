FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      c; // concentration
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.20;  // 20% bulk hematocrit

boundaryField
{
    inlet           
    {
        type            fixedValue;
	value		uniform 0.20;  
    }

    outlet          
    {
        type            slip;
    }

    lowerWall       
    {
        type            zeroGradient;
    }

    upperWall       
    {
        type            zeroGradient;
    }

    frontAndBack    
    {
        type            empty;
    }
}

